<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NumberTranslationStyle"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/word_imageview"
        style="@style/icons" />

    <RelativeLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/word_imageview"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/english_number_textview"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="bottom"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="one" />
        <!--style="@style/activityMiwokTextStyle"
        style="@style/activityEnglishTextStyle" -->

        <TextView
            android:id="@+id/qazaq_number_textview"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/english_number_textview"
            android:gravity="top"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            tools:text="bir" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"

            android:paddingRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/sharp_play_arrow_white_24dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground" />
</RelativeLayout>